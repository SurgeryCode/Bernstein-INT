{%- layout none -%}

{%- if search.results_count > 0 -%}
    {%- for product in search.results -%}
        {%- assign in_cart = false -%}
        {% for item in cart.items %}
            {% if item.product.id == product.id %}
                {%- assign in_cart = true -%}
            {% endif %} 
        {% endfor %}
        {%- if in_cart -%}
            {%- render 'upsell-item', product: product, action: 'remove-from-cart' -%}
        {%- else -%}
            {%- render 'upsell-item', product: product, action: 'add-to-cart' -%}
        {%- endif -%}
    {%- endfor -%}
{%- endif -%}