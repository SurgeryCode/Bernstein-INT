{%- if paginate.parts.size > 0 -%}
    <link rel="stylesheet" href="{{ 'component-pagination.css' | asset_url }}" media="print" onload="this.media='all'">
    <noscript>{{ 'component-pagination.css' | asset_url | stylesheet_tag }}</noscript>

    <nav class="pagination{% if container_class != nil %} pagination--{{ container_class }}{% endif %}" data-pages="{{ paginate.pages }}">
        {%- if paginate.previous -%}
            <a 
                href="{{ paginate.previous.url }}{{ anchor }}" 
                class="pagination__item"
                title="{{ 'pagination.previous' | t }}"
                aria-label="{{ 'pagination.previous' | t }}">
                    {%- render 'svg-icon', name: 'arrow-left' -%}
            </a>
        {%- endif -%}

        <ul class="w-medium gray">
            {%- for part in paginate.parts -%}
                <li>
                    {%- if part.is_link -%}
                        <a 
                            href="{{ part.url }}{{ anchor }}" 
                            class="pagination__item" 
                            aria-label="{{ 'pagination.page' | t: number: part.title }}">
                                {{ part.title }}
                        </a>
                    {%- else -%}
                        {%- if part.title == paginate.current_page -%}
                            <span 
                                class="pagination__item" 
                                aria-current="page"
                                aria-label="{{ 'pagination.page' | t: number: part.title }}">
                                    {{ part.title }}
                            </span>
                        {%- else -%}
                            <span class="pagination__item">{{ part.title }}</span>
                        {%- endif -%}
                    {%- endif -%}
                </li>
            {%- endfor -%}
        </ul>

        {%- if paginate.next -%}
            <a 
                href="{{ paginate.next.url }}{{ anchor }}" 
                class="pagination__item" 
                title="{{ 'pagination.next' | t }}"
                aria-label="{{ 'pagination.next' | t }}">
                    {%- render 'svg-icon', name: 'arrow-right' -%}
            </a>
        {%- endif -%}
    </nav>
{%- endif -%}