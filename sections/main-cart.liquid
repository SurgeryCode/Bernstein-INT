            </button>
          {%- endif -%}

          <div class="cart-details__payments">
            {% assign enabled_payment_types = 'visa,master,american_express,cartes_bancaires,paypal' | remove: ' ' | split: ',' %}
            {% assign klarna_countries = "nl, es, pt, no, de, it, ie, fr, fi, dk, be, at, se" | split: ", " %}
            {% for type in shop.enabled_payment_types %}
              {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
            {% endfor %}
          </div>

          {%- if section.settings.pay_in_three != blank or section.settings.sichere_zalung != blank -%}
            <div class="cart-details__features">
              {%- if section.settings.pay_in_three != blank -%}
                <div class="cart-details__features__item">
                  {%- render 'svg-icon', name: 'cart-empty' -%}
                  {%- assign p = cart.total_price | divided_by: 3 | money -%}
                  <span>{{ 'product.pay_in_3' | t: price: p }}</span>
                </div>
              {%- endif -%}
              {%- if section.settings.sichere_zalung != blank -%}
                <div class="cart-details__features__item">
                  {%- render 'svg-icon', name: 'warranty' -%}
                  <span>{{ section.settings.sichere_zalung }}</span>
                </div>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    {%- else -%}
      <div class="cart__empty">
        {%- render 'svg-icon', name: 'cart-empty' -%}
        <h2 class="f-32">{{ section.settings.empty_heading }}</h2>
        <p class="w-medium gray">{{ section.settings.empty_text | newline_to_br }}</p>
        <a href="{{ section.settings.empty_button_url }}" class="button button--large">
          {{ section.settings.empty_button_label }}
        </a>
      </div>
    {%- endunless -%}
  </div>
</cart-main>

{% schema %}
{
  "name": "Main Cart",
  "tag": "section",
  "class": "section section--cart",
  "settings": [
    {
      "type": "header",
      "content": "Empty state"
    },
    {
      "type": "text",
      "id": "empty_heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "empty_text",
      "label": "Text"
    },
    {
      "type": "url",
      "id": "empty_button_url",
      "label": "Button URL"
    },
    {
      "type": "text",
      "id": "empty_button_label",
      "label": "Button label"
    },
    {
      "type": "header",
      "content": "Sidebar: Features"
    },
    {
      "type": "text",
      "id": "pay_in_three",
      "label": "Pay in 3"
    },
    {
      "type": "text",
      "id": "sichere_zalung",
      "label": "Safe payment information"
    },
    {
      "type": "checkbox",
      "id": "enable_paypal_button",
      "label": "PayPal button",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ]
}
{% endschema %}
