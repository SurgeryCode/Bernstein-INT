<div class="account-box account-box--newsletter">
    <span class="account-box__title f-24 w-bold">{{ 'account.newsletter.title' | t }}</span>
    <div class="account-box__row">
        <div class="account-box__col {% if section.settings.newsletter_text_additional != blank %}account-box__col--1-2{% else %}account-box__col--2-3{% endif %}">
            <form-validate>
                {%- form 'customer', class: 'customer-form customer-form--account-newsletter account-box__newsletter-form' -%}
                <input
                    type="hidden"
                    name="contact[email]"
                    class="visually-hidden" 
                    value="{{ customer.email }}">

                    <div class="field-row">
                        <div class="field field--1-1">
                            <div class="checkbox-hld checkbox-hld--account-newsletter">
                                <input
                                    type="checkbox"
                                    
                                    id="account-newsletter"
                                    class="visually-hidden" 
                                    {% if customer.accepts_marketing == true %}
                                    checked
                                    {% endif %}
                                >
                                <label for="account-newsletter">
                                    {% render 'svg-icon', name: 'check-mark' %}
                                    {{ 'account.newsletter.text1' | t }}
                                </label>
                                <div class="form-newsletter-info form-newsletter-info--account">
                                    {{ 'account.newsletter.text2' | t }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="account-box__btn-hld">
                        <button class="button upper" type="submit" disabled>{{ 'newsletter.submit' | t }}</button>
                    </div>
                {%- endform -%} 
            </form-validate>
        </div>

        {%- if section.settings.newsletter_text_additional != blank -%}
            <div class="account-box__col account-box__col--1-2 account-box__col--newsletter-additional">
                <div class="account-box__newsletter-additional">
                    <div class="richtext richtext--checkify-ul-no-borders">
                        {{ section.settings.newsletter_text_additional }}
                    </div>
                </div>
            </div>
        {%- endif -%}
    </div>
</div>