                                            <div class="field field--1-1">
                                                <input
                                                    type="text"
                                                    id="Address-CompanyName_{{ form.id }}"
                                                    value="{{ customer.metafields.wholesale.company_name.value }}"
                                                    readonly
                                                >
                                                <label for="Address-CompanyName_{{ form.id }}">
                                                    <span>{{ 'b2b.form.company' | t }}</span>
                                                </label>
                                            </div>
                                        </div>
