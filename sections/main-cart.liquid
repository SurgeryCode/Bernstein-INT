<script src="{{ 'cart.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'quantity.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'swiper.js' | asset_url }}" defer="defer"></script>
 
<cart-main class="cart" id="{{ section.id }}" data-items-count="{{ cart.item_count }}" loading="true">
  <div class="container">
    <h1 class="f-48 w-bold">{{ 'cart.title' | t }}</h1>
    {%- unless cart.empty? -%}
      <div class="cart__grid">
        <div class="cart-list">
          <form id="cart-form" action="{{ routes.cart_url }}" method="post">
            {%- for line_item in cart.items -%}
              {%- render 'cart-item', line_item: line_item -%}
            {%- endfor -%}
          </form>
          <a href="/" class="btn-continue-shopping">
            {%- render 'svg-icon', name: 'arrow-left' -%}
            <span>{{ 'accessibility.continue_shopping' | t }}</span>
          </a>
        </div>
        <div class="cart-details">
          <div class="cart-details__summary">
            <h2 class="f-24">{{ 'cart.summary' | t }}</h2>
            <div class="cart-details__total-value">
              <span class="f-14 w-medium">{{ 'cart.subtotal' | t }}:</span>
              <span class="w-medium">{{ cart.original_total_price | money }}</span>
            </div>

            {%- for discount_application in cart.discount_applications -%}
            <div class="cart-details__total-value">
              <span class="f-14 w-medium">{{ 'cart.discount' | t }} ({{ discount_application.title }}):</span>
              <span class="w-medium"><em style="position:relative;top:-1px;">-</em> {{ discount_application.total_allocated_amount | money }}</span>
            </div>
            {%- endfor -%} 
           
            <div class="cart-details__delivery-cost">
              <span class="f-14 w-medium">{{ 'cart.delivery_cost' | t }}:</span>
              <span class="f-12 w-medium gray">{{ 'cart.delivery_cost_information' | t }}</span>
            </div>
            <div class="cart-details__subtotal">
              <span class="f-14 w-medium">{{ 'cart.total' | t }}:</span>
              <span class="f-24 w-bold">
                {{ cart.total_price | money }}
                {%- if cart.taxes_included -%}
                  {%- liquid
                    assign tax_excluded = false
                    assign b2b_country = customer.metafields.wholesale.vat_id | slice: 0, 2
                    unless b2b_country == 'DE'
                      if customer.tags contains 'B2B' or customer.tags contains 'b2b'
                        assign tax_excluded = true
                      endif
                    endunless
                  -%}
                  {%- if tax_excluded -%}
                    <p class="f-14 w-regular gray">{{ 'cart.tax_excluded' | t }}</p>
                  {%- else -%}
                    <p class="f-14 w-regular gray">{{ 'cart.tax_included' | t }}</p>
                  {%- endif -%}
                {%- endif -%}
              </span>
            </div>
          </div>

          <button type="submit" name="checkout" form="cart-form" class="button button--large">{{ "cart.checkout" | t }}</button>

          {%- if section.settings.enable_paypal_button -%}
            <button type="submit" name="checkout" form="cart-form" class="button button--large button--paypal" aria-label="PayPal">
