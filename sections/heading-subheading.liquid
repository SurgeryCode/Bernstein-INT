<link rel="stylesheet" href="{{ 'section-heading-subheading.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>
    {{ 'section-heading-subheading.css' | asset_url | stylesheet_tag }}
</noscript>

<style>
    @media (min-width: 992px) {
        #shopify-section-{{ section.id }} .heading-section__heading--title {
            max-width: {{ section.settings.heading_width }}%;
        }

        #shopify-section-{{ section.id }} .heading-section__heading--description {
            max-width: {{ section.settings.subheading_width }}%;
        }
    }

    {% if section.settings.layout == "row" or section.settings.layout == "row-reverse" %}
        @media (min-width: 992px) {
            #shopify-section-{{ section.id }} .heading-section__heading-wrapper {
                flex-direction: {{ section.settings.layout }};
            }
        }
        @media (max-width: 991px) {
            #shopify-section-{{ section.id }} .heading-section__heading-wrapper {
                flex-direction: column;
                gap: 1rem;
            }
        }
    {% else %}
        #shopify-section-{{ section.id }} .heading-section__heading-wrapper {
            flex-direction: {{ section.settings.layout }};
            gap: 1rem;
        }
    {% endif %}

    {% if section.settings.alignment == "left" %}
        #shopify-section-{{ section.id }} .heading-section__heading-wrapper {
            align-items: flex-start;
            text-align: left;
        }
    {% elsif section.settings.alignment == "center" %}
        #shopify-section-{{ section.id }} .heading-section__heading-wrapper {
            align-items: center;
            text-align: center;
        }
    {% elsif section.settings.alignment == "right" %}
        #shopify-section-{{ section.id }} .heading-section__heading-wrapper {
            align-items: flex-end;
            text-align: right;
        }
    {% endif %}

    #shopify-section-{{ section.id }} .heading-section__heading-wrapper {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
      }
    
    @media screen and (min-width: 750px) {
        #shopify-section-{{ section.id }} .heading-section__heading-wrapper {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }
</style>

<div class="container">
    <div class="heading-section__heading-wrapper">
        {%- if section.settings.heading != blank -%}
            <h{{ section.settings.heading_tag }} class="f-48 heading-section__heading--title heading-section__heading--title--{{ section.settings.alignment }}">{{ section.settings.heading }}</h{{ section.settings.heading_tag }}>
        {% endif %}
        {%- if section.settings.description != blank -%}
            <div class="richtext heading-section__heading--description heading-section__heading--description--{{ section.settings.sub_alignment }}">
                {{ section.settings.description }}
            </div>
        {%- endif -%}
    </div>
    {% if section.settings.button_label and section.settings.button_link %}
        <div class="heading-section__button-wrapper">
            <a class="button button--large 
                {% if section.settings.button_color == "blue" and section.settings.button_style == "filled" %}button--blue 
                {% elsif section.settings.button_color == "black" and section.settings.button_style == "filled" %}button--black 
                {% elsif section.settings.button_color == "white" and section.settings.button_style == "filled" %}button--white {% endif %} 
                {% if section.settings.button_style == "outline" %}button--outline{% endif %}" href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
        </div>
    {% endif %}
</div>

{% schema %}
{
    "name": "Heading, subheading, CTA",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding top",
            "default": 100
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding bottom",
            "default": 64
        },
        {
            "type": "select",
            "id": "layout",
            "label": "Layout",
            "info": "row and row-reverse works only on desktop",
            "default": "row",
            "options": [
                {
                    "value": "row",
                    "label": "Row" 
                },
                {
                    "value": "column",
                    "label": "Column" 
                },
                {
                    "value": "row-reverse",
                    "label": "Row reverse" 
                },
                {
                    "value": "column-reverse",
                    "label": "Column reverse" 
                }
            ]
        },
        {
            "type": "header",
            "content": "Heading"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
        },
        {
            "type": "select",
            "id": "heading_tag",
            "label": "Heading tag",
            "default": "3",
            "options": [
                {
                    "value": "1",
                    "label": "H1"
                },
                {
                    "value": "2",
                    "label": "H2" 
                },
                {
                    "value": "3",
                    "label": "H3"
                },
                {
                    "value": "4",
                    "label": "H4"
                }
            ]
        },
        {
            "type": "range",
            "id": "heading_width",
            "label": "Heading witdh (if desktop)",
            "min": 25,
            "max": 50,
            "step": 1,
            "default": 30
        },
        {
            "type": "text_alignment",
            "id": "alignment",
            "label": "Heading alignment",
            "default": "center"
        },
        {
            "type": "header",
            "content": "Subheading"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Subheading",
        },
        {
            "type": "range",
            "id": "subheading_width",
            "label": "Subheading width (if dekstop)",
            "min": 25,
            "max": 50,
            "step": 1,
            "default": 40
        },
        {
            "type": "text_alignment",
            "id": "sub_alignment",
            "label": "Subheading alignment",
            "default": "center"
        },
        {
            "type": "header",
            "content": "CTA"
        },
        {
            "type": "text",
            "id": "button_label",
            "label": "Button label"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
        },
        {
            "type": "select",
            "id": "button_style",
            "label": "Button style",
            "default": "outline",
            "options": [
                {
                    "value": "outline",
                    "label": "Outline"
                },
                {
                    "value": "filled",
                    "label": "Filled" 
                }
            ]
        },
        {
            "type": "select",
            "id": "button_color",
            "label": "Button color (if filled)",
            "default": "black",
            "options": [
                {
                    "value": "white",
                    "label": "White"
                },
                {
                    "value": "blue",
                    "label": "Blue" 
                },
                {
                    "value": "black",
                    "label": "Black" 
                }
            ]
        }
    ],
  "presets": [
    {
      "name": "Heading, subheading, CTA"
    }
  ]
}
{% endschema %}