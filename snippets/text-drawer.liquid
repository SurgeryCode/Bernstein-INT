<link rel="stylesheet" href="{{ 'section-drawer.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'section-drawer.css' | asset_url | stylesheet_tag }}</noscript>
<script src="{{ 'drawer.js' | asset_url }}" defer="defer"></script>

<drawer-section class="drawer" id="drawer-text" tabindex="-1">
    <div class="drawer__content">
        <button 
            title="{{ 'accessibility.close' | t }}" 
            aria-label="{{ 'accessibility.close' | t }}"
            class="drawer__close"
            data-drawer-close>
                {%- render 'svg-icon', name: 'close' -%}
        </button>

        <div class="drawer__header">
            <span class="f-32 w-bold" data-drawer-heading></span>
        </div>

        <div class="drawer__scroll">
            <div class="drawer__scroll-inner  drawer__scroll-inner--offset">
                <div class="richtext richtext--gray richtext--checkify-ul-blue f-16" data-drawer-richtext>
                </div>
            </div>
        </div>

        <div class="drawer__buttons">
            <button class="text-link text-link--reverse f-14 w-medium upper spaced" data-drawer-close>
                <span>{{ 'accessibility.back' | t }}</span>
            </button>
        </div>
    </div>
</drawer-section>