<script src="{{ 'swiper.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'comparison.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'product-item.js' | asset_url }}" defer="defer"></script>

<comparison-section class="comparison">
    <div class="container">
        <div class="comparison__header">
            <h1 class="f-48 w-bold">{{ page.title }}</h1>
            <p class="comparison__enabled f-24 w-bold gray">{{ 'compare.subtext_enabled_html' | t }}</p>
            <p class="comparison__disabled f-24 w-bold gray">{{ 'compare.subtext_disabled_html' | t }}</p>
            <button class="text-link gray f-14 w-medium" data-go-back>
                {%- render 'svg-icon', name: 'arrow-left' -%}
                <span>{{ 'accessibility.back' | t }}</span>
            </button>
        </div>

        <div class="comparison__content comparison__enabled">
            <div class="comparison__items">
                <div class="swiper">
                    <div class="swiper-container">
                        <div class="swiper-wrapper"></div>
                    </div>
                    <div class="product-carousel__arrows">
                        <button 
                            class="arrow arrow--left"
                            title="{{ 'accessibility.prev_slide' | t }}"
                            aria-label="{{ 'accessibility.prev_slide' | t }}">
                            {%- render 'svg-icon', name: 'chevron-left' -%}
                        </button>
                        <button 
                            class="arrow arrow--right"
                            title="{{ 'accessibility.next_slide' | t }}"
                            aria-label="{{ 'accessibility.next_slide' | t }}">
                            {%- render 'svg-icon', name: 'chevron-right' -%}
                        </button>
                    </div>
                    <div class="swiper-scrollbar"></div>
                </div>
            </div>

            <div class="comparison__details">
                <div class="comparison__details-heading">
                    <h2 class="f-24">{{ 'compare.details.heading' | t }}</h2>
                    <p class="f-14 w-medium gray">{{ 'compare.details.subtext' | t }}</p>
                </div>
                <div class="swiper">
                    <div class="swiper-container">
                        <div class="swiper-wrapper"></div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
</comparison-section>

{% schema %}
{
  "name": "Product Comparison",
  "tag": "section",
  "class": "section section--page margin margin--first",
  "settings": []
}
{% endschema %}
